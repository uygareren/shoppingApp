<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <ImageView
                     android:id="@+id/goProfile"
                     android:layout_width="65dp"
                     android:layout_height="match_parent"
                     android:src="@drawable/ic__person">

                 </ImageView>

                 <EditText
                     
                     android:id="@+id/search_box"
                     android:layout_width="315dp"
                     android:layout_height="60dp"
                     android:layout_margin="8dp"
                     android:layout_marginLeft="20dp"
                     android:background="@drawable/search_custom"
                     android:drawableLeft="@drawable/ic_search_24"
                     android:drawablePadding="5dp"
                     android:elevation="3dp"
                     android:hint="Search"
                     android:padding="13dp"
                     android:textColorHint="@color/black" />


             </LinearLayout>

             <androidx.recyclerview.widget.RecyclerView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/search_rec"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp">

             </androidx.recyclerview.widget.RecyclerView>





             <LinearLayout
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:weightSum="2">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="Discount Products"
                     android:textColor="@color/fragment_home_color"
                     android:textSize="22sp"
                     android:textStyle="bold">

                 </TextView>


                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/view_all_popular"
                     android:layout_weight="1"
                     android:text="View All"
                     android:textColor="@color/view_al_color"
                     android:textStyle="bold"
                     android:gravity="end"
                     android:layout_marginRight="7dp"
                     android:textSize="16sp">

                 </TextView>


             </LinearLayout>

             <androidx.recyclerview.widget.RecyclerView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="5dp"
                 android:id="@+id/pop_rec">

             </androidx.recyclerview.widget.RecyclerView>

             <LinearLayout
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:weightSum="2">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="Category"
                     android:textColor="@color/fragment_home_color"
                     android:textSize="22sp"
                     android:textStyle="bold">

                 </TextView>


                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/view_all_explore"
                     android:layout_weight="1"
                     android:text="View All"
                     android:textStyle="bold"
                     android:textColor="@color/view_al_color"
                     android:gravity="end"
                     android:layout_marginRight="7dp"
                     android:textSize="16sp">

                 </TextView>


             </LinearLayout>

             <androidx.recyclerview.widget.RecyclerView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="5dp"
                 android:id="@+id/category_rec">

             </androidx.recyclerview.widget.RecyclerView>



         </LinearLayout>
    </ScrollView>

</RelativeLayout>

